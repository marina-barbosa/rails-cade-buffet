<!DOCTYPE html>
<html>
  <head>
    <title>CadeBuffet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <nav>
      <ul>
        <li> <%= link_to 'Cade Buffet', root_path %> </li>
        <% if user_signed_in? %>
          <%= current_user.email %>
          <li> <%= link_to 'Sair', root_path %> </li>
        <% else %>
          <li> <%= link_to 'Login', new_user_session_path %> </li>
        <% end %>
      </ul>
    </nav>

    <div>
      <%= alert %>
      <%= notice %>
    </div>
    <%= yield %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>CadeBuffet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <nav>
      <ul>
        <li> <%= link_to 'Cade Buffet', root_path %> </li>        
        <% if user_signed_in? %>
        <% if current_user.owner && current_user.buffet_id != nil %>
        <li> <%= link_to 'Seu Buffet', buffet_path(current_user.buffet_id) %> </li>
        <li><%= current_user.email %>
        <li><%= link_to 'Pesquisar', search_path %></li>
          <% end %>
          <li><%= button_to 'Sair', destroy_user_session_path, method: :delete %> </li>
        <% else %>
          <li> <%= link_to 'Login', new_user_session_path %> </li>
        <% end %>
      </ul>
    </nav>

    <div>
      <%= alert %>
      <%= notice %>
    </div>
    <%= yield %>
  </body>
</html>

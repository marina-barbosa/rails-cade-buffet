<h1>Criando Buffet</h1>

<%= form_with model: @buffet, url: '/buffet' do |f| %>
  <%= f.label :commercial_name %>
  <%= f.text_field :commercial_name %>

  <%= f.label :legal_name %>
  <%= f.text_field :legal_name %>

  <%= f.label :cnpj %>
  <%= f.text_field :cnpj %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit 'Salvar Buffet' %>
<% end %>